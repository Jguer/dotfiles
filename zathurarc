# vim:fdm=marker foldlevel=0
#{{{ Colours

# Base16 purple-spice
# Author: purple-spice

set default-bg                  "#2d2b55"
set default-fg                  "#000000"

set statusbar-fg                "#ffffff"
set statusbar-bg                "#6943ff"

set inputbar-bg                 "#2d2b55"
set inputbar-fg                 "#ffffff"

set notification-bg             "#2d2b55"
set notification-fg             "#ffffff"

set notification-error-bg       "#2d2b55"
set notification-error-fg       "#f92a1c"

set notification-warning-bg     "#2d2b55"
set notification-warning-fg     "#f92a1c"

set highlight-color             "#f1d000"
set highlight-active-color      "#6871ff"

set completion-bg               "#000000"
set completion-fg               "#6871ff"

set completion-highlight-fg     "#ffffff"
set completion-highlight-bg     "#6871ff"

set recolor-lightcolor          "#2d2b55"
set recolor-darkcolor           "#c7c7c7"

set recolor                     "false"
set recolor-keephue             "false"
#}}}

#{{{ Layout
set adjust-open           width
set incremental-search    false
set statusbar-home-tilde  true
set selection-clipboard clipboard
#}}}

#{{{ Other Options
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-step 50
#}}}

#{{{ Key bindings
map <PageUp> scroll full_up
map <PageDown> scroll full_down
map <BackSpace> scroll full_up all
map <M-v> scroll full_up
map <C-v> scroll full_down

map + zoom in
map - zoom out
map q quit
map w adjust_window width
map z adjust_window bestfit

map <Space> navigate next
map <S-Space> navigate previous
map b toggle_statusbar

map <C-g> abort
#}}}
