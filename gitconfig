# ~/.gitconfig
[branch]
  autosetuprebase = always
[credential]
  helper = /usr/lib/git-core/git-credential-gnome-keyring
[commit]
	gpgsign = true
[push]
	default = current
	followTags = true
[rebase]
  autostash = true
  autosquash = true
[include]
  path=~/.gitconfig-user
[status]
	submoduleSummary = true
[core]
	excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[pull]
	rebase = true
[protocol]
	version = 2
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
